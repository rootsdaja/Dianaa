@model AirplaneTrafficManagement.Models.TicketViewModel
@{
    ViewBag.Title = "Ticket Search Page";
}
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Display all the Tickets.</h2>
</hgroup>
<style>
    table, th, td {
        border: 2px solid black;
    }

    th, td {
        padding: 15px;
    }
</style>
<table style="width: 800px" class="table table-bordered table-hover">
    <tr>
        <td><b>Id Ticket</b></td>
        <td><b>Seat Number</b></td>
        <td><b>Available Tickets</b></td>
        <td><b>Total Number of Tickets</b></td>
        <td><b>Class</b></td>
        <td><b>RoundTrip</b></td>
        <td><b>Options</b></td>
    </tr>
    @foreach (var item in Model._ticketList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idTicket)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.seat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.availableTickets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalTickets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.@class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.roundTrip)
            </td>
            <td>
                @*@{var session = new Common.WebSessionContext();
                    }

                    @if (session.Admin == true)
                    {*@
                <p>@Html.ActionLink("Edit Ticket", "EditTicket", "Ticket", new { id = item.idTicket }, null) </p>
                <p>@Html.ActionLink("Delete Ticket", "DeleteTicket", "Ticket", new { id = item.idTicket }, null)</p>
                <p>@Html.ActionLink("Add Ticket", "CreateTicket", "Ticket", null) </p>
                @*<p>@Html.ActionLink("Movie Details", "movieDetail", "Flight", new { id_detail = item.idFlight }, null)</p>*@
                @*}

                    else
                    {*@
                @*@Html.ActionLink("Flight Details", "movieDetail", "Flight", new { id_detail = item.idFlight }, null)
                    <p>@Html.ActionLink("Reserve Ticket", "CreateTicket", "Flight", new { id = item.idFlight }, null)  </p>*@
                @*}*@
            </td>
        </tr>
    }
</table>
